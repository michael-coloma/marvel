{
  "compilerOptions": {
    "baseUrl": "./",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      // "src/*": ["src/*"],
      "@assets/*": ["src/marvel/adapters/primary/ui/assets/*"],
      "@components/*": ["src/marvel/adapters/primary/ui/components/*"],
    },
    /* language */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    /* js support */
    "allowJs": true,
    /* Interop Constraints */
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    /* type checking */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    /* modules */
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* emit */
    "noEmit": false,
    /* others*/
    "jsx": "react-jsx"
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "dist","**/*.test.ts", "**/*.test.tsx"]
}
